{
  "parser": "babel-eslint",
  "plugins": ["react", "import", "jsx-a11y", "mocha"],
  "env": {
    "browser": true,
    "node": true,
    "es6": true
  },
  "rules": {
    "react/prop-types": [2],
    "no-plusplus": [2, { "allowForLoopAfterthoughts": true }],
    "mocha/no-exclusive-tests": "error"
  },
  "extends": ["airbnb"]
}
